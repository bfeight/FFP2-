
  <div class="container login">

    <div class="row">
        <h1 class="col s12 m12 l12 center-align title">WELCOME TO WYNVISUALS!</h1>

        <%= form_tag '/login' do %>

        <div class="col s12 m4 offset-m4 l14 offset-l4 ">
          <div class="field">
          <%= label_tag :email, nil, class: "sign_up" %>
          <%= text_field_tag :email %>
          </div>

          <div class="field">
            <%= label_tag :password, nil, class: "sign_up" %>
            <%= password_field_tag :password %>
          </div>
       <%= submit_tag "Login" %>

        <% end %>
      </div>
    </div>

</div>
